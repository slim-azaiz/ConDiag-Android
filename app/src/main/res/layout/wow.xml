<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@color/bbn_fixed_item_ripple_color">


    <ImageButton
        android:background="@drawable/three_d_selector"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/bSelect"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bUp" />

    <TextView
        android:id="@+id/okText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bSelect"
        android:layout_alignTop="@+id/bSelect"
        android:layout_alignRight="@+id/bSelect"
        android:layout_alignBottom="@+id/bSelect"
        android:layout_margin="1dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="OK"
        android:textColor="@color/colorPrimary" />


    <ImageButton
        android:background="@drawable/power_selector"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/bPower"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />


    <ImageButton
        android:background="@drawable/v_minus_selector"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/bVolDown"
        android:layout_below="@+id/bVolUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:background="@drawable/empty_selector"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/bExit"
        android:layout_alignTop="@+id/bBack"
        android:layout_toLeftOf="@+id/bMute"
        android:layout_toStartOf="@+id/bMute" />
    <TextView
        android:id="@+id/exitText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bExit"
        android:layout_alignRight="@+id/bExit"
        android:layout_alignBottom="@+id/bExit"
        android:gravity="center"
        android:textSize="20dp"
        android:text="EXIT"
        android:textColor="@color/md_white_1000"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:layout_alignTop="@+id/bExit" />

    <ImageButton
        android:background="@drawable/p_minus_selector"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/bChannelDown"
        android:layout_below="@+id/bChannelUp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:background="@drawable/empty_selector"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/bMenu"
        android:layout_above="@+id/bExit"
        android:layout_alignLeft="@+id/okText"
        android:layout_alignStart="@+id/okText" />

    <TextView
        android:id="@+id/menuText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bMenu"
        android:layout_alignTop="@+id/bMenu"
        android:layout_alignRight="@+id/bMenu"
        android:layout_alignBottom="@+id/bMenu"
        android:layout_margin="1dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="TiVo"
        android:textColor="@color/md_white_1000" />

    <ImageButton
        android:background="@drawable/mute_selector"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/bMute"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:background="@drawable/left_selector"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/bLeft"
        android:layout_alignTop="@+id/okText"
        android:layout_toLeftOf="@+id/bSelect"
        android:layout_toStartOf="@+id/bSelect" />

    <ImageButton
        android:background="@drawable/right_selector"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/bRight"
        android:layout_alignTop="@+id/okText"
        android:layout_toRightOf="@+id/bSelect"
        android:layout_toEndOf="@+id/bSelect" />

    <ImageButton
        android:background="@drawable/info_selector"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/bInfo"
        android:layout_alignTop="@+id/bSelect"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageButton
        android:background="@drawable/v_plus_selector"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/bVolUp"
        android:layout_alignTop="@+id/bDown"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:background="@drawable/p_plus_selector"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/bChannelUp"
        android:layout_below="@+id/bSelect"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:background="@drawable/up_selector"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/bUp"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/okText"
        android:layout_alignEnd="@+id/okText" />

    <ImageButton
        android:background="@drawable/down_selector"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/bDown"
        android:layout_below="@+id/bSelect"
        android:layout_alignRight="@+id/okText"
        android:layout_alignEnd="@+id/okText" />

    <ImageButton
        android:background="@drawable/back_selector"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/bBack"
        android:layout_below="@+id/bVolDown"
        android:layout_toLeftOf="@+id/bSelect"
        android:layout_toStartOf="@+id/bSelect" />


    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/viewpagertabControl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorWithoutPadding="false"
        app:stl_indicatorInFront="false"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorColor="#40C4FF"
        app:stl_indicatorThickness="4dp"
        app:stl_indicatorWidth="auto"
        app:stl_indicatorCornerRadius="2dp"
        app:stl_overlineColor="#4D000000"
        app:stl_overlineThickness="0dp"
        app:stl_underlineColor="#4D000000"
        app:stl_underlineThickness="1dp"
        app:stl_dividerColor="#4D000000"
        app:stl_dividerThickness="1dp"
        app:stl_defaultTabBackground="?attr/selectableItemBackground"
        app:stl_defaultTabTextAllCaps="true"
        app:stl_defaultTabTextColor="#FC000000"
        app:stl_defaultTabTextSize="12sp"
        app:stl_defaultTabTextHorizontalPadding="16dp"
        app:stl_defaultTabTextMinWidth="0dp"
        app:stl_distributeEvenly="false"
        app:stl_clickable="true"
        app:stl_titleOffset="24dp"
        app:stl_drawDecorationAfterTab="true"
        android:layout_below="@id/bBack"
        android:layout_alignParentLeft="true"


        />
    <FrameLayout
        android:id="@+id/tabControl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/viewpagertabControl" />


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerControl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewpagertabControl" />


</RelativeLayout>
