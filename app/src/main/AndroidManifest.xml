<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.androidhive.gmail"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk tools:overrideLibrary="android.support.v17.leanback"/>
    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:icon="@drawable/control"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".history.HistoryActivity"
            android:label="History"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".discovery.dial.DiscoveryActivity"
            android:label="Discovery"
            android:parentActivityName=".history.HistoryActivity"
            />

        <activity
            android:name=".login.Login"
            android:label="@string/title_activity_login"
            android:parentActivityName=".discovery.dial.DiscoveryActivity" />
        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".history.HistoryActivity"
            />
        <activity android:name=".control_diagnostic.ControlDiagnostic"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity android:name=".control_diagnostic.control.ControlActivity"
            android:label="Control"
            android:parentActivityName=".control_diagnostic.ControlDiagnostic"
            />
        <activity android:name=".control_diagnostic.control.basicmultitouch.TouchActivity"
            android:label="Control"
            android:parentActivityName=".control_diagnostic.control.ControlActivity"
            />
        <activity android:name=".control_diagnostic.diagnostic.DiagnosticActivity"
            android:label="Diagnostic"
            android:parentActivityName=".control_diagnostic.ControlDiagnostic"
            android:theme="@style/AppTheme.NoActionBar"
            />
    </application>

</manifest>